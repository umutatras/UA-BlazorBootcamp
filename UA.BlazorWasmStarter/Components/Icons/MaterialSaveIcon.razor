<svg xmlns="http://www.w3.org/2000/svg"
     @onclick="@(()=>OnClick.InvokeAsync())"
     width="@($"{Width}{UnitType.ToString().ToLowerInvariant()}")"
     height="@($"{Height}{UnitType.ToString().ToLowerInvariant()}")" 
     class="@CssClass"
     style="@AdditionalCss"
     role="button"
     viewBox="0 0 24 24">
    <path fill="@ColorCode"
          d="M15 9H5V5h10m-3 14a3 3 0 0 1-3-3a3 3 0 0 1 3-3a3 3 0 0 1 3 3a3 3 0 0 1-3 3m5-16H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V7z" />
</svg>

@code{
    [Parameter]
    public int Width { get; set; } = 2;
    [Parameter]
    public int Height { get; set; } = 2;
    [Parameter]
    public string ColorCode { get; set; } = "currentColor";
    /*,EditorRequired ile işaretlersek zorunlu olarak verilmesi gerekir*/
    [Parameter]
    public UA.BlazorWasmStarter.Enums.CssUnitType UnitType { get; set; } = Enums.CssUnitType.Rem;
    [Parameter]
    public string CssClass { get; set; } = string.Empty;
    [Parameter]
    public string AdditionalCss { get; set; } = string.Empty;

    [Parameter] public EventCallback OnClick { get; set; }
}